//Pump-Action Shotgun
Actor PumpActionShotgun : Weapon
{
Obituary "%o was blown by %k's shotty."
Attacksound "weapons/Xshotgf"
Inventory.PickupMessage "You got the Pump-Action Shotgun!"
Weapon.SelectionOrder 1300
Weapon.Kickback 100
Weapon.AmmoType "Shell"
Weapon.AmmoGive 8
Weapon.AmmoUse 1
Weapon.SlotNumber 3
Decal "BulletChip"
Tag "Pump-Action Shotgun"
States
	{
	Ready:
		XSTG A 1 A_WeaponReady
		Loop
	Deselect: 
		XSTG A 1 A_Lower
		Loop
	Select:
		XSTG A 1 A_Raise
		Loop
	Fire:
		XSTG A 3
		XSTG A 0 A_FireBullets (5.6, 5.6, 8, 5, "BulletPuff")
		XSTG A 7 A_GunFlash
		XSTG B 4
		XSTG C 3 A_PlaySound("weapons/Xshotgr")
		XSTG DC 4
		XSTG B 2
		XSTG A 6 A_ReFire
		Goto Ready  
	Flash:
		XSTF A 3 bright A_Light2
		TNT1 A 3 A_Light1
		Goto Lightdone
	Spawn:
		XSOT A -1
		Stop
	}
}
